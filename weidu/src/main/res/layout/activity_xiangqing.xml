<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_back333"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="电影详情"
        android:textSize="18sp"
        android:textColor="#fff"
        />
    <TextView
        android:id="@+id/xiangqing_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="影片名称"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/xiangqing_simp"
        android:layout_width="250dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_xiangqing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="详情"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:background="@drawable/tuoyuan"
            />
        <Button
            android:id="@+id/btn_yugao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="预告"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:background="@drawable/tuoyuan"
            />
        <Button
            android:id="@+id/btn_juzhao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="剧照"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:background="@drawable/tuoyuan"
            />
        <Button
            android:id="@+id/btn_yingping"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="影评"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:background="@drawable/tuoyuan"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:src="@drawable/com_ic_back"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_buy"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:background="@drawable/cocircle"
            android:text="购票"
            android:textColor="#fff"
           />
    </LinearLayout>
</LinearLayout>