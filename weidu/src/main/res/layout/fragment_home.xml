<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:clipChildren="false"
        android:background="@drawable/ic_back111"
        >
<!--

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/home_simp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
-->

        <recycler.coverflow.RecyclerCoverFlow
            android:id="@+id/recyFlow"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            ></recycler.coverflow.RecyclerCoverFlow>

    </RelativeLayout>

    <!--热门列表-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_hot"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:text="热门电影"
                android:textSize="20dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/com_icon_next_default_xhdpi"
                />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/hot_recyView"
            android:layout_width="match_parent"
            android:layout_height="80dp">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <!--正在上映-->
    <LinearLayout
        android:id="@+id/text_looking"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="正在上映"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/com_icon_next_default_xhdpi"
                />
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/looking_recyView"
            android:layout_width="match_parent"
            android:layout_height="80dp">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <!--即将上映-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_will"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:text="即将上映"
                android:textSize="20dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/com_icon_next_default_xhdpi"
                />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/will_recyView"
            android:layout_width="match_parent"
            android:layout_height="80dp">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>