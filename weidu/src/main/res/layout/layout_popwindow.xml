<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backjianbian"
    android:orientation="vertical"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/pop_simp"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:background="@color/colorPrimary"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="140dp"
                >
                <TextView
                    android:id="@+id/mingzi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="  影片名称"
                    android:textColor="#fff"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/leixing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   类型:"
                    android:layout_marginTop="5dp"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/daoyan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   导演:"
                    android:layout_marginTop="5dp"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/shichang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="   时常:"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/chandi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="   产地:"
                    android:textColor="#fff" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  剧情简介："
                android:textColor="#fff"
                android:textSize="25sp"
                />
            <TextView
                android:id="@+id/jianjie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="剧情简介："
                android:textColor="#fff"
                android:textSize="18sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  参演人员："
                android:textColor="#fff"
                android:textSize="25sp"
                />
            <TextView
                android:id="@+id/renyuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="演职人员："
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>

</LinearLayout>
