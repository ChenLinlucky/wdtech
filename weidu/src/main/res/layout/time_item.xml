        android:layout_height="44dp"
        android:layout_margin="25dp"
        android:background="#B8B6AB"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
