            android:text="14:40      ----"
            android:textColor="#fff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="    16:26"
            android:textColor="#fff"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/seat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
