<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="15dp"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/tuijian_simp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#CEC9C9"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CEC9C9"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tuijian_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="大地影城"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tui_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="海淀区大地影城xxxx"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/tuijian_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:text="3.6km" />

        <ImageView
            android:id="@+id/img_GuanZhu"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="200dp"
            android:src="@drawable/ic_false_heart_xxhdpi"
            />
    </RelativeLayout>

</LinearLayout>
